      "bugbot_reviews": {
        "channel": "#code-review",
        "severity_threshold": "medium",
        "format": "detailed"
      }
    },

    "interactive_features": {
      "slash_commands": false,
      "interactive_messages": false,
      "workflow_approvals": false,
      "direct_cursor_chat": false
    }
  }
}
