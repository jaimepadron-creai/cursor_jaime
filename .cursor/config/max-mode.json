{
  "max_mode": {
    "enabled": true,
    "usage_strategy": "strategic",
    "activation_triggers": {
      "manual_only": true,
      "keywords": [
        "refactor entire",
        "analyze codebase",
        "migrate to",
        "generate documentation"
      ]
    },
    "scope_limits": {
      "max_files": 500,
      "exclude_patterns": [
        "node_modules/**",
        "dist/**",
        "build/**",
        "*.min.js",
        "coverage/**",
        ".astro/**",
        "course-website/node_modules/**"
      ]
    },
    "cost_controls": {
      "max_monthly_usage": 10,
      "require_confirmation": true
    }
  }
}
