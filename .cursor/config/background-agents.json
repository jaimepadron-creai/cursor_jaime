{
  "background_agents": {
    "enabled": false,
    "max_concurrent_agents": 2,
    "priority_queue": true,

    "execution_environment": {
      "node_version": "18",
      "python_version": "3.11",
      "memory_limit": "4GB",
      "timeout": "2h",
      "save_artifacts": true
    },

    "notification_settings": {
      "slack_webhook": "",
      "email_notifications": false,
      "progress_updates": "on_completion"
    },

    "security": {
      "environment_isolation": true,
      "credential_management": "env",
      "audit_logging": false
    },

    "cost_controls": {
      "monthly_budget": 100,
      "alert_threshold": 0.8,
      "auto_pause": true
    }
  }
}
